{
  "name": "open-letter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:setup": "docker exec -i postgres-test psql -U postgres -c 'CREATE DATABASE openletter;'",
    "db:schema": "docker exec -i postgres-test psql -U postgres -d openletter < schema.sql",
    "db:init": "npm run db:setup && npm run db:schema",
    "db:reset": "docker exec -i postgres-test psql -U postgres -c 'DROP DATABASE IF EXISTS openletter;' && npm run db:init"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@sendgrid/mail": "^8.1.4",
    "@supabase/supabase-js": "^2.48.1",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "next": "15.1.6",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
